@model List<Skill>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yetenekler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yetenek Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Yetenekler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz :
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Beceri</th>
                                    <th scope="col">Değer</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>%@item.Value</td>
                                        
                                        <td>
                                            <a href="/Skill/DeleteSkill/@item.SkillId"
                                               class="btn btn-danger btn-round ">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Skill/UpdateSkill/@item.SkillId"
                                               class="btn btn-default btn-round">Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Skill/CreateSkill/" class="btn btn-primary btn-round btn-border">Yeni Deneyim Girişi</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


