@model List<SocialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Medya Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Sosyal Medya ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz :
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Icon</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">URL</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td> <i class="@item.Icon"></i> </td>
                                        <td>@item.Title</td>
                                        <td><a href="https://@item.Url" class="btn btn-default btn-round" target="_blank">Profile Git</a></td>

                                        <td>
                                            <a href="/SocialMedia/DeleteMedia/@item.SocialMediaId"
                                               class="btn btn-danger btn-round ">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/SocialMedia/UpdateMedia/@item.SocialMediaId"
                                               class="btn btn-info btn-round">Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/SocialMedia/CreateMedia/"
                           class="btn btn-success btn-round">Yeni Sosyal Medya Adresi Girişi</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

